// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using postgresql, mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model User {
    id                String                  @id @default(uuid())
    username          String
    email             String                  @unique
    password          String
    Project           Project[]
    // assigned_projects Project[]               @relation("ColaboratorsOnProject")
    colaborations     ColaboratorsOnProject[]
}
//TODO: CHANGE PROJECT TO FILE
model Project {
    id            String                  @id @default(uuid())
    title         String
    content       String?
    creator       User                    @relation(fields: [userId], references: [id])
    userId        String
    // colaborators  User[]                  @relation("ColaboratorsOnProject")
    colaborations ColaboratorsOnProject[]
    files File[]
}
model File {
    id            String                  @id @default(uuid())
    title         String
    content       String?
    projectId String
    projects Project        @relation(fields:[projectId],references: [id])
}

model ColaboratorsOnProject {
    user      User    @relation(fields: [userId], references: [id])
    userId    String
    project   Project @relation(fields: [projectId], references: [id])
    projectId String
    status    Status

    @@id([userId, projectId])
}

enum Status {
    ACCEPTED 
    REJECTED
    PENDING
}

model Session {
    id     String @id @default(uuid())
    userId String @unique
}
